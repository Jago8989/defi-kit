{
  "extends": "next/core-web-vitals",

  "overrides": [
    {
      // Force the setting of a swagger description on each api endpoint
      "files": ["pages/api/**/*.ts"],
      "plugins": ["jsdoc"],
      "rules": {
        "jsdoc/no-missing-syntax": [
          "error",
          {
            "contexts": [
              {
                "comment": "JsdocBlock:has(JsdocTag[tag=openapi])",
                "context": "any",
                "message": "@openapi documentation is required on each API. Check this out for syntax info: https://github.com/jellydn/next-swagger-doc"
              }
            ]
          }
        ]
      }
    }
  ]
}
